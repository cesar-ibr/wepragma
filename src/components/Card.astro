---
interface Props {
	title: string;
	description: string;
	imageUrl: string;
	features: string[];
}

const { title, description, imageUrl, features } = Astro.props;
---

<div class="bg-white rounded-3xl overflow-hidden shadow-lg orange-gradient">
	<div class="p-6 md:p-8 flex flex-col md:flex-row">
		<div class="md:w-1/2 mb-6 md:mb-0 md:mr-8">
			<img
				src={imageUrl}
				alt={title}
				class="rounded-2xl w-full h-auto object-cover"
			/>
		</div>
		<div class="md:w-1/2">
			<h3 class="text-2xl font-bold text-midnight-800 mb-4">{title}</h3>
			<p class="text-gray-400 mb-6">{description}</p>
			<ul class="space-y-2 mb-6">
				{
					features.map((feature) => (
						<li class="flex items-center text-midnight-500">
							<svg
								class="w-5 h-5 mr-2 text-orange-600"
								fill="currentColor"
								viewBox="0 0 20 20"
							>
								<path
									fill-rule="evenodd"
									d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
									clip-rule="evenodd"
								/>
							</svg>
							{feature}
						</li>
					))
				}
			</ul>
			<a
            href="#"
            class="inline-flex items-center text-midnight-500 hover:text-orange-600 transition-colors duration-200"
          >
            <div class="flex items-center mb-6">
              <span class="text-xl mr-4">Conocer m√°s</span>
              <img
                src="assets/icons/flecha.svg"
                width="40"
                height="40"
                alt="button"
              />
            </div>
          </a>        
		</div>
	</div>
</div>
